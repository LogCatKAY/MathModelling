<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/table_image_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Поиск корней функции (обратная интерполяция)."/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.5"
                        android:text="Степень полинома:" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Введите степень полинома"
                        android:inputType="phone"
                        android:id="@+id/et_n_grade_2"
                        android:ellipsize="end"
                        android:imeOptions="flagNoExtractUi"/>

                </TableRow>

                <TableRow
                    android:layout_margin="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Рассчитать"
                        android:id="@+id/btn_calculate_root"/>

                </TableRow>

                <TableRow
                    android:paddingTop="24dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.5"
                        android:text="Результат интерполяции:" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:textColor="#44CC22"
                        android:text="ТУТ БУДЕТ РЕЗУЛЬТАТ"
                        android:id="@+id/tv_int_result_root"/>

                </TableRow>

                <TableRow
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.5"
                        android:text="Точное значение корня:" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:textColor="#44CC22"
                        android:text="ТУТ БУДЕТ ТОЧНОЕ ЗНАЧЕНИЕ"
                        android:id="@+id/tv_calculated_result_root"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>